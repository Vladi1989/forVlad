<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:padding="8dp">

<LinearLayout
    android:id="@+id/ll_nav_home"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_icon_home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/buttom_nav_btn_1_negativ"/>

    <TextView
        android:id="@+id/tv_text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:fontFamily="@font/exo_medium"
        android:textColor="@color/text4"
        android:textSize="12sp"/>

</LinearLayout>

<LinearLayout
    android:id="@+id/ll_nav_discounts"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_icon_discounts"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/buttom_nav_btn_2_negativ"/>

    <TextView
        android:id="@+id/tv_text_discounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discounts"
        android:fontFamily="@font/exo_medium"
        android:textColor="@color/text4"
        android:textSize="12sp"/>

</LinearLayout>

<LinearLayout
    android:id="@+id/ll_nav_order"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_icon_order"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/buttom_nav_btn_3_negativ"/>

    <TextView
        android:id="@+id/tv_text_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:fontFamily="@font/exo_medium"
        android:textColor="@color/text4"
        android:textSize="12sp"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/ll_nav_account"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_icon_account"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/buttom_nav_btn_4_negativ"/>

    <TextView
        android:id="@+id/tv_text_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:fontFamily="@font/exo_medium"
        android:textColor="@color/text4"
        android:textSize="12sp"/>
</LinearLayout>

</LinearLayout>

    </androidx.cardview.widget.CardView>