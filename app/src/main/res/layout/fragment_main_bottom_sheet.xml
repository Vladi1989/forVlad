<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loading.main.MainBottomSheetFragment">

    <ImageView
        android:id="@+id/ivLine"
        android:layout_width="110dp"
        android:layout_height="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/home_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSecondPageLetsGo"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="28dp"
        android:layout_height="48dp"
        android:text="Let's Go!"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/exo_medium"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_shape_r12"
        app:layout_constraintTop_toTopOf="@id/ivLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="28dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape_stroke"
        android:fontFamily="@font/exo_medium"
        android:text="Create an Account"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/text1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSecondPageLetsGo"
        app:layout_constraintStart_toStartOf="@+id/btnSecondPageLetsGo"
        app:layout_constraintTop_toBottomOf="@id/btnSecondPageLetsGo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:text="Or"
        android:textColor="@color/text1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnCreateAccount"
        app:layout_constraintStart_toStartOf="@+id/btnCreateAccount"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount" />

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View Menu"
        android:textSize="18sp"
        android:fontFamily="@font/exo_medium"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>