<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_background"
    tools:context=".loading.main.LoadingFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="213dp"
        android:background="@drawable/logo_social"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/exo_medium"
        android:gravity="center"
        android:text="Welcome to the world of taste!"
        android:textColor="@color/text1"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Welcome to OwlTech Delivery - your assistant in the world of delicious food. Let's explore the endless possibilities of gastronomy together!"
        android:textSize="14dp"
        android:fontFamily="@font/exo_medium"
        android:textColor="@color/text3"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFirstPageLetsGo"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="28dp"
        android:layout_height="48dp"
        android:text="Let's Go!"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/exo_medium"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape_r12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>