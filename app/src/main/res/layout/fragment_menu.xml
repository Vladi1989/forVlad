<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.menu.ui.presentation.MenuFragment">

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="1dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llSearchFood"
            android:layout_width="281dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_view_stroke_text5">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="19dp"
                android:background="@drawable/search"
                android:backgroundTint="@color/text2" />

            <EditText
                android:id="@+id/edSearch"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="11dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Search food"
                android:inputType="text"
                android:textColorHint="@color/text4" />

            <View
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="14dp"
                android:background="?android:attr/listDivider" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="13dp"
                android:background="@drawable/filter"
                android:backgroundTint="@color/text2" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="21.85dp"
                android:layout_gravity="center"
                android:background="@drawable/cart"
                android:backgroundTint="@color/text2" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_marginTop="96dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/llSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginHorizontal="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageSlider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="73dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/icon_menu_4" />

                    <TextView
                        android:layout_width="42dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:text="Pizza"
                        android:textColor="@color/text2"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="73dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/icon_menu_1" />

                    <TextView
                        android:layout_width="42dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:text="Pizza"
                        android:textColor="@color/text2"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="73dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/icon_menu_2" />

                    <TextView
                        android:layout_width="42dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:text="Pizza"
                        android:textColor="@color/text2"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="73dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/icon_menu_3" />

                    <TextView
                        android:layout_width="42dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter"
                        android:text="Pizza"
                        android:textColor="@color/text2"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="21.5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                <TextView
                    android:layout_width="266dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5.5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:text="Recommendet for you"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSeeAll"
                    android:layout_width="52dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/exo_medium"
                    android:text="See all"
                    android:textColor="@color/primary"
                    android:textSize="14dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommend"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="28dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="@+id/rvRecommend"
                app:layout_constraintTop_toBottomOf="@+id/rvRecommend" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>