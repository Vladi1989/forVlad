<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivLine"
        android:layout_width="110dp"
        android:layout_height="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/home_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSecondPageLetsGo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="28dp"
        android:background="@drawable/button_shape_r12"
        android:fontFamily="@font/exo_medium"
        android:text="Delivery"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape_stroke"
        android:fontFamily="@font/exo_medium"
        android:text="Self-delivery"
        android:textAllCaps="false"
        android:textColor="@color/text1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnSecondPageLetsGo"
        app:layout_constraintStart_toStartOf="@+id/btnSecondPageLetsGo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>